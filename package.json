{
  "name": "ai-ad-maker",
  "version": "1.0.0",
  "description": "Agence Marketing IA SOTA 2025 - Automatisation complète de création publicitaire",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "test:unit": "pnpm run --recursive test:unit",
    "test:integration": "pnpm run --recursive test:integration",
    "test:e2e": "playwright test",
    "test:perf": "k6 run k6.config.js",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "type-check": "pnpm run --recursive type-check",
    "clean": "pnpm run --recursive clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "cd apps/api && pnpm db:generate",
    "db:push": "cd apps/api && pnpm db:push",
    "db:migrate": "cd apps/api && pnpm db:migrate",
    "db:studio": "cd apps/api && pnpm db:studio",
    "queue:dev": "cd apps/api && pnpm queue:dev",
    "agents:dev": "cd apps/api && pnpm agents:dev",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:scan": "snyk test",
    "security:monitor": "snyk monitor",
    "perf:test": "k6 run k6.config.js",
    "perf:load": "k6 run --vus 100 --duration 5m k6.config.js",
    "perf:stress": "k6 run --vus 500 --duration 10m k6.config.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "dotenv": "^16.4.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "k6": "^0.0.0",
    "prettier": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "marketing",
    "automation",
    "agents",
    "workflow",
    "nextjs",
    "typescript",
    "langchain",
    "openai",
    "slack",
    "notion"
  ],
  "author": "AI Ad Maker Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-ad-maker.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ai-ad-maker/issues"
  },
  "homepage": "https://ai-ad-maker.com",
  "dependencies": {
    "@fastify/websocket": "^11.2.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@types/fluent-ffmpeg": "^2.1.27",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1"
  }
}